#include <stdio.h>

int main(void)

{
  int num;

  //Entrada de Dados:
  printf("\n\n\tDigite um número inteiro:");
  scanf("%i", &num);

  //Processamento de Dados:

  if(num % 2 == 0)
    printf("\n\n\tO número %i é PAR!", num);
  
  else
    printf("\n\n\tO número %i é ÍMPAR!", num);


  return 0;
}